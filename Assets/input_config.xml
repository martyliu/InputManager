<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Input>
  <ControlScheme name="Normal" type="KeyboardMouseControlScheme">
    <Action name="Horizontal">
      <Binding type="DigitalAxis">
        <Positive>W</Positive>
        <Negative>X</Negative>
      </Binding>
    </Action>
  </ControlScheme>
  <ControlScheme name="PS4" type="JoystickControlScheme">
    <Action name="Ability1">
      <Binding type="Button">
        <Positive>JoystickButton1</Positive>
      </Binding>
    </Action>
    <Action name="MouseX">
      <Binding type="DigitalAxis">
        <Positive>JoystickButton3</Positive>
      </Binding>
    </Action>
    <Action name="Fly">
      <Binding type="AnalogButton">
        <Axis>6</Axis>
      </Binding>
    </Action>
  </ControlScheme>
</Input>